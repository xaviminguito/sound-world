---
type Props = {
  id: string
  user_id: string
  title: string
  artist: string
  image_url: string
}

const { id, user_id, title, artist, image_url } = Astro.props
---

<div class="flex flex-col">
  <a href={`/artist/${user_id}`} class="text-black hover:text-pink-700 focus-visible:ring-2 focus:outline-none focus:ring-black">
    <div
      class="shadow-md hover:shadow-lg relative"
    >
      <img
        class="card-image rounded-md relative z-10 transition hover:scale-110"
        src={image_url}
        alt={`${artist} - ${title} album cover`}
        aria-hidden="true"
        width="400"
        height="400"
        transition-name={`img-${id}`}
      />
      <img
        src="/vynil-lp.webp"
        alt=""
        width="400"
        height="400"
        class="absolute top-0 opacity-0 vynil-image"
        aria-hidden="true"
      />
    </div>
  <div class="pt-4 font-semibold">{title}</div><span class="sr-only"> by</span>
    <div class="pt-1 text-gray-700">{artist}</div>
  </a>
</div>
